<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="infoBean" class="com.learn.springbasic.spring4dependencyInjection.DI2SetterInjection.SDI1WithMap.InfoBean">
        <property name="name" value="Tharuka"/>
        <property name="msg" value="Learning SDI With Mappers"/>
        <property name="framework">
            <map>
                <entry key="Struts" value="Struts is an open source framework used to develop Java MVC based web applications."></entry>
                <entry key="Spring" value="Spring is an application framework used to develop Java Enterprise applications and designed on concept called Dependency injection."></entry>
                <entry key="Hibernate" value="Hibernate is an object-relational mapping (ORM) framework that works with relational database."></entry>
            </map>
        </property>
    </bean>
</beans>